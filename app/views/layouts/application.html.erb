<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex m-0 p-0 w-100 justify-content-between bg-light mt-2">
      <%= link_to 'Simple Airbnb', flats_path, class: "navbar-button ml-2" %>
      <div class="d-flex">
        <form action="" class="d-flex">
          <div class="form-group">
            <input type="search" id="search" placeholder="Search" class="form-control">
          </div>
          <input type="submit" value="Search" class="btn btn-primary align-middle h-75 ml-2">
        </form>
        <%= link_to 'Add Flat', new_flat_path, class: "btn btn-primary  align-middle h-75 ml-2" %>
      </div>
    </div>
    </div>
    <%= yield %>
  </body>
</html>
